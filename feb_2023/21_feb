#User function Template for python3

class Solution:
    def minIteration(self, N, M, x, y):
        if(N==1 and M==1):
            return 0
        s=0
        r=0
        if(y >(M-y)):
            s= y-1
        else:
            s= M-y
        if(x >(N-x)):
            r= x-1
        else:
            r= N-x
        return s+r

